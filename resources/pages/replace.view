  <text id="letter" fill="white" x="50%" y="100" width="300" font-size="36" font-family="System-Regular" text-anchor="middle" text-length="20" />
  <text id="timestamp" fill="white" x="50%" y="150" width="300" font-size="36" font-family="System-Regular" text-anchor="middle" text-length="20" />
  <use href="#button" fill="#FF00FF" x="10%" y="100%-90" width="80%">
    <set href="text" attributeName="text-buffer" to="Back" />
